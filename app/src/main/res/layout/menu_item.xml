<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/menuIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:padding="@dimen/dimValue_10"
        android:text=""
        android:textColor="@color/dark_green"
        android:textSize="@dimen/dimTextSize_23" />

    <TextView
        android:id="@+id/menuTitel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimValue_5"
        android:layout_weight="0.8"
        android:gravity="center|left"
        android:text=""
        android:textColor="@color/primary_text"
        android:textSize="@dimen/dimTextSize_14" />

</LinearLayout>
