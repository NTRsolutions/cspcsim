<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragements.SignupGeneralInformationFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimValue_10"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="General Information"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/dimTextSize_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rolLable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Designation"
                    android:textColor="@color/primary_text"

                    android:textSize="@dimen/dimTextSize_14" />

                <Spinner
                    android:id="@+id/rolspinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:popupBackground="@color/white"
                    android:prompt="@string/select_des" />

                <View
                    android:id="@+id/spinnerLine"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_10">

                <EditText
                    android:id="@+id/enterName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Name"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_14" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_10">

                <EditText
                    android:id="@+id/entermiddlename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Middle Name"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_14" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_10">

                <EditText
                    android:id="@+id/entersurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Surname"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_14" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Nationalitylable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Nationality"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_14" />

                <Spinner
                    android:id="@+id/Nationalityspinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:popupBackground="@color/white"
                    android:prompt="@string/select_nation" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_16"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/selectrsalable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Country"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_14" />

                <Spinner
                    android:id="@+id/countryspinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:popupBackground="@color/white"
                    android:prompt="@string/select_rsa" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rsaIdDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_10"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_rsaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/enterrsaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter RSA ID number"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/uploadrsa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dimValue_10"
                        android:paddingTop="@dimen/dimValue_10"
                        android:text="Upload RSA ID copy"
                        android:textSize="@dimen/dimTextSize_14" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:background="@color/divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nonrsalayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/documatentypelable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Document Type"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_14" />

                <Spinner
                    android:id="@+id/documentTypespinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:popupBackground="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:background="@color/divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/passpostLayoutdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_10"
                android:orientation="vertical">

                <Button
                    android:id="@+id/passwordcopybt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimValue_10"
                    android:paddingTop="@dimen/dimValue_10"
                    android:text="Passport Copy"
                    android:textSize="@dimen/dimTextSize_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:background="@color/divider" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_enterpassportlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_10">

                    <EditText
                        android:id="@+id/enterpassportno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Passpoart number"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14" />
                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:id="@+id/passportexpDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:gravity="left|center"
                    android:hint="Passport Expiry Date"
                    android:textColor="#000" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:background="@color/divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/asylumLayoutdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_10"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/asylumcopybt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimValue_10"
                    android:paddingTop="@dimen/dimValue_10"
                    android:text="Asylum Copy"
                    android:textSize="@dimen/dimTextSize_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:background="@color/divider" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_enterasylumlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_10">

                    <EditText
                        android:id="@+id/enterasylumno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Asylum number"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14" />
                </android.support.design.widget.TextInputLayout>


                <TextView
                    android:id="@+id/asylumexpDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:gravity="left|center"
                    android:hint="Asylum Expiry Date"
                    android:textColor="#000" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:background="@color/divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/workpermitLayoutdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_10"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/workperminbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimValue_10"
                    android:paddingTop="@dimen/dimValue_10"
                    android:text="Upload Workpermit"
                    android:textSize="@dimen/dimTextSize_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:background="@color/divider" />

                <Button
                    android:id="@+id/proofcompanybt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dimValue_10"
                    android:paddingTop="@dimen/dimValue_10"
                    android:text="Proof of Address of Company"
                    android:textSize="@dimen/dimTextSize_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimValue_10"
                    android:background="@color/divider" />
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40px" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/previous"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:padding="10dp"
                android:text="Previous"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/nextLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:text="Next"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/nextIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Ne"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:paddingRight="20dp"
                android:paddingTop="16dp"
                android:text="Confirm"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>